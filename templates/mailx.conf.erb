#
# String parameters:
<%- if @abrt_mailx_detailed_subject || @detailedmailsubject -%>
Subject="<%= @fqdn %> [<%= @hostgroup %>] abrt crash report"
<%- else -%>
# Subject=
<%- end -%>
<%- if @abrt_mailx_from   -%>
EmailFrom=<%= @abrt_mailx_from %>
<%- else -%>
# EmailFrom=
<%- end -%>
<%- if @abrt_mailx_to     -%>
EmailTo=<%= @abrt_mailx_to %>
<%- else -%>
# EmailTo=
<%- end -%>
#
# Boolean parameter:
<%- if @abrt_mailx_binary -%>
SendBinaryData=yes
<%- else -%>
SendBinaryData=no
<%- end -%>
